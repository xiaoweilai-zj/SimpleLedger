.category-section {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #fff;
  position: relative;
}

.chart-container {
  width: 100%;
  height: 450rpx;
  position: sticky;
  top: 0;
  background: #fff;
  margin: 0 auto;
  flex-shrink: 0;
  z-index: 2;
}

.category-list {
  flex: 1;
  padding: 0 30rpx;
  -webkit-overflow-scrolling: touch;
  background: #fff;
  position: relative;
  z-index: 1;
}

.category-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.category-header {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.category-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.category-info {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-right: 20rpx;
}

.category-name {
  font-size: 28rpx;
  color: #333;
}

.category-amount {
  font-size: 28rpx;
  color: #666;
}

.category-percent {
  font-size: 24rpx;
  color: #999;
  min-width: 100rpx;
  flex-shrink: 0;
}

.progress-bar {
  height: 6rpx;
  background: #f5f5f5;
  border-radius: 3rpx;
  overflow: hidden;
  margin-top: 10rpx;
}

.progress {
  height: 100%;
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

ec-canvas {
  width: 100% !important;
  height: 100% !important;
}

scroll-view {
  background: #fff;
} 