.container {
  padding: 30rpx;
  background: #fff;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  position: relative;
  z-index: 1;
}

/* 账本选择器样式 */
.book-selector {
  background: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.book-info {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
}

.book-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-right: 10rpx;
}

.arrow-icon {
  width: 0;
  height: 0;
  border-left: 6rpx solid transparent;
  border-right: 6rpx solid transparent;
  border-top: 8rpx solid #666;
  margin-left: 8rpx;
  transition: transform 0.3s ease;
}

.book-info.active .arrow-icon {
  transform: rotate(180deg);
}

/* 确保所有容器都有白色背景 */
.bill-list,
.bill-item,
.add-bill-btn {
  background: #fff;
  position: relative;
  z-index: 1;
}

