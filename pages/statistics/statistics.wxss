.page-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(to bottom, #1296db, #13c2c2);
  z-index: -1;
}

.container {
  padding: 20rpx;
}

.book-selector {
  margin-bottom: 20rpx;
}

.book-info {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 12rpx;
}

.book-name {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}

.total-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.total-header {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.total-amount {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.personal-stats {
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-item .label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
  display: block;
}

.stat-item .value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.value.positive {
  color: #52c41a;
}

.value.negative {
  color: #f5222d;
}

.tab-nav {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 10rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #1296db;
  font-weight: bold;
}

.tab-item.active:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #1296db;
  border-radius: 2rpx;
}

.tab-content {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1296db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 