.container {
  padding: 0;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 顶部统计区域样式 */
.header {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.header-summary {
  display: flex;
  justify-content: space-between;
}

.summary-item {
  display: flex;
  flex-direction: column;
}

.label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 账单列表样式 */
.bill-list {
  background: #fff;
  padding: 0 30rpx;
}

.bill-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.more {
  color: #666;
  font-size: 24rpx;
}

.bill-item-wrapper {
  position: relative;
  overflow: hidden;
  animation: slideIn 0.3s ease;
  animation-fill-mode: both;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateX(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.bill-item {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  background: #fff;
  z-index: 2;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.bill-item.move-left {
  transform: translateX(-300rpx);
}

.bill-actions {
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  display: flex;
  z-index: 1;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 100%;
  color: #fff;
  font-size: 28rpx;
}

.action-btn.edit {
  background: #13c2c2;
}

.action-btn.detail {
  background: #1296db;
}

.action-btn.delete {
  background: #ff4d4f;
}

.bill-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.category-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 50%;
  padding: 12rpx;
}

.category-icon image {
  width: 100%;
  height: 100%;
}

.bill-info {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.category {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.description {
  font-size: 24rpx;
  color: #999;
}

.bill-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.amount {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.date {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 底部功能区样式 */
.function-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  background: #fff;
  border-top: 1rpx solid #eee;
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.function-item image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.function-item text {
  font-size: 24rpx;
  color: #666;
}

/* 悬浮按钮样式 */
.float-btn {
  position: fixed;
  right: 30rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background: #1296db;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
  z-index: 99;
  transition: all 0.3s ease;
  transform: scale(1);
}

.float-btn image {
  width: 50rpx;
  height: 50rpx;
}

.float-btn:active {
  transform: scale(0.9);
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

/* 空状态样式 */
.empty-state {
  padding: 100rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.empty-state image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.create-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #07c160;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

