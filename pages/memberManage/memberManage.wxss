.container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 成员列表样式 */
.member-list {
  background: #fff;
  border-radius: 12rpx;
  padding: 0 30rpx;
}

.member-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.member-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.name {
  font-size: 32rpx;
  color: #333;
}

.member-actions {
  display: flex;
  align-items: center;
}

.amount {
  font-size: 28rpx;
  color: #666;
  margin-right: 30rpx;
}

.delete-btn {
  padding: 10rpx;
}

.delete-btn image {
  width: 36rpx;
  height: 36rpx;
}

/* 添加成员表单样式 */
.add-member {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  transform: translateY(100%);
  transition: transform 0.3s;
}

.add-member.show {
  transform: translateY(0);
}

.input-area {
  display: flex;
  align-items: center;
}

.input-area input {
  flex: 1;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
}

.confirm-btn {
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #07c160;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.confirm-btn.disabled {
  background: #ccc;
}

/* 悬浮按钮样式 */
.float-btn {
  position: fixed;
  right: 30rpx;
  bottom: 140rpx;
  width: 100rpx;
  height: 100rpx;
  background: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.float-btn image {
  width: 50rpx;
  height: 50rpx;
} 