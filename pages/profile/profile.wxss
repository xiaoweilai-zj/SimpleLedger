.container {
  padding: 0;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 登录区域样式 */
.login-section {
  background: #fff;
  padding: 60rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.default-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 30rpx;
}

.login-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #1296db;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 用户信息区域样式 */
.user-section {
  background: #fff;
  padding: 40rpx 30rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.nickname {
  font-size: 32rpx;
  color: #333;
}

/* 功能列表样式 */
.menu-group {
  margin-top: 20rpx;
  background: #fff;
  padding: 0 30rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-left icon {
  margin-right: 20rpx;
  color: #1296db;
}

.menu-left text {
  font-size: 28rpx;
  color: #333;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  color: #1296db;
  font-size: 28rpx;
  border-radius: 0;
  margin: 0;
  padding: 0;
}

.logout-btn::after {
  border: none;
}

/* 在现有样式的基础上添加 */

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
}

.modal-header {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.avatar-section {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.avatar-wrapper {
  padding: 0;
  width: 160rpx;
  height: 160rpx;
  position: relative;
  background: none;
}

.avatar-wrapper::after {
  border: none;
}

.avatar-preview {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.avatar-tip {
  position: absolute;
  bottom: -40rpx;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

.nickname-section {
  margin: 60rpx 0 30rpx;
}

.nickname-input {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  text-align: center;
}

.use-wx-info {
  text-align: center;
  font-size: 28rpx;
  color: #1296db;
  margin-bottom: 30rpx;
  background: none;
  padding: 0;
  line-height: 1;
}

.use-wx-info::after {
  border: none;
}

.modal-footer {
  display: flex;
  justify-content: space-between;
}

.modal-footer button {
  width: 300rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: #1296db;
  color: #fff;
}

.logout {
  margin-top: 30rpx;
  border-top: 20rpx solid #f5f5f5;
}

.logout-text {
  color: #ff4d4f !important;
}

