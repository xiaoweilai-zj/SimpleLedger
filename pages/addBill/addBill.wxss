.container {
  padding: 30rpx;
  background: #fff;
  min-height: 100vh;
}

/* 金额输入区域 */
.amount-input {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.currency {
  font-size: 48rpx;
  color: #333;
  margin-right: 10rpx;
}

.amount-input input {
  font-size: 48rpx;
  width: 400rpx;
  text-align: left;
}

/* 分类选择区域 */
.category-section {
  margin: 40rpx 0;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.category-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.category-item {
  width: 140rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 10rpx;
  padding: 20rpx 0;
  border-radius: 12rpx;
  background: #f5f5f5;
}

.category-item.selected {
  background: #e6f3ff;
  color: #1296db;
}

.category-item image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.category-item text {
  font-size: 24rpx;
}

/* 参与成员区域 */
.form-item {
  margin: 40rpx 0;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
}

/* 成员选择区域 */
.member-section {
  margin: 40rpx 0;
}

.member-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.member-item {
  margin: 10rpx;
  padding: 10rpx 30rpx;
  background: #f8f8f8;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}

.member-item.selected {
  background: #e6f7ff;
  border: 1rpx solid #1296db;
  color: #1296db;
}

.member-item image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
  border: 4rpx solid transparent;
}

.member-item.selected image {
  border-color: #07c160;
}

.member-item text {
  font-size: 24rpx;
  color: #333;
}

/* 其他信息输入区域 */
.input-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.input-item .label {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
}

.input-item input,
.input-item .picker {
  flex: 1;
  font-size: 28rpx;
}

/* 提交按钮 */
.submit-btn {
  position: fixed;
  bottom: 40rpx;
  left: 30rpx;
  right: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #1296db;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  transition: all 0.3s ease;
}

.submit-btn.disabled {
  background: rgba(18, 150, 219, 0.5);
  pointer-events: none;
}

.add-member {
  border: 1rpx dashed #ddd;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx 30rpx;
  transition: all 0.3s ease;
  gap: 6rpx;
  color: #999;
}

.add-icon {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1;
}

.add-member:active {
  background: #f8f8f8;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
}

.modal-header {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.modal-body input {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.modal-footer button {
  flex: 1;
  margin: 0 10rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: #1296db;
  color: #fff;
} 