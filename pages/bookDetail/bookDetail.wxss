/* pages/bookDetail/bookDetail.wxss */
.container {
  padding: 0;
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 账本头部 */
.book-header {
  padding: 40rpx 30rpx;
  color: #fff;
}

.book-info {
  display: flex;
  flex-direction: column;
}

.book-name {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.member-count {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 统计区域 */
.statistics {
  display: flex;
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.label {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.amount {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

/* 账单列表 */
.bill-list {
  background: #fff;
  padding: 0 30rpx;
}

.bill-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.bill-left {
  display: flex;
  align-items: center;
}

.bill-info {
  display: flex;
  flex-direction: column;
}

.description {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.date {
  font-size: 24rpx;
  color: #999;
}

.bill-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.split-info {
  font-size: 24rpx;
  color: #1296db;
  margin-top: 8rpx;
}

/* 空状态 */
.empty-state {
  padding: 60rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
}

/* 底部功能区 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-top: 1rpx solid #eee;
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.function-item image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.function-item text {
  font-size: 24rpx;
  color: #666;
}

.add-bill {
  width: 100rpx;
  height: 100rpx;
  background: #1296db;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.add-bill image {
  width: 40rpx;
  height: 40rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
}

.modal-header {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.modal-body {
  margin-bottom: 30rpx;
}

.amount-input {
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.desc-input {
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  justify-content: space-between;
}

.modal-footer button {
  width: 300rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: #1296db;
  color: #fff;
}