.container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 添加空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  background: #fff;
  border-radius: 12rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}

.bill-detail {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.amount-section {
  text-align: center;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.amount {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.info-section {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #999;
}

.value {
  font-size: 28rpx;
  color: #333;
}

.split-section {
  padding-top: 30rpx;
}

.split-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.split-header text {
  font-size: 28rpx;
  color: #333;
}

.split-amount {
  color: #1296db;
}

.member-list {
  display: flex;
  flex-wrap: wrap;
  gap: 30rpx;
  padding: 20rpx 0;
}

.member-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
  background-color: #f5f5f5;
}

.nickname {
  font-size: 24rpx;
  color: #666;
  max-width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
} 